{
    "extends": [
        "tslint:recommended",
        "../tslint.json",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "@fuse/**"
        ]
    },
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            [
                "fuse",
                ""
            ],
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            [
                "fuse",
                ""
            ],
            "kebab-case"
        ]
    }
}
